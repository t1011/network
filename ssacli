---
- name: Get unique disk models using ssacli
  hosts: all
  become: yes
  vars:
    disk_models_list: []
  tasks:
    - name: Get disk models using ssacli
      ansible.builtin.shell: |
        ssacli ctrl all show config detail | grep "Model:" | awk '{print $3}' | sort -u
      register: disk_models
      changed_when: false
      failed_when: disk_models.rc != 0 and disk_models.rc != 1

    - name: Aggregate disk models into a list
      ansible.builtin.set_fact:
        disk_models_list: "{{ disk_models_list + disk_models.stdout_lines }}"
      when: disk_models.stdout_lines is defined

    - name: Compute unique disk models
      ansible.builtin.set_fact:
        all_unique_models: "{{ disk_models_list | unique }}"
      when: inventory_hostname == ansible_play_hosts[-1]

    - name: Display unique disk models
      ansible.builtin.debug:
        msg: "{{ all_unique_models }}"
      when: inventory_hostname == ansible_play_hosts[-1]
